<%- include ../partials/layout.ejs %>

<div class="left-column">
  <h1><%-user.name%></h1>
  <p><%-user.email%></p>
  <p><%-user.date_joined%></p>
</div>

<div>
  <h1>Reviews</h1>
  <%reviews.forEach(function(review, i) {%>
    <p>
      <%-review.title%>
      <%-formattedDates[i]%>
      <%-review.content%>
      <a href="/albums/<%= review.album_id %>/reviews/<%= review.id %>"><img src="/trashCan.svg" height="20" class="trashCan"></a>
    </p>
  <%})%>
</div>

<%- include ../partials/footer.ejs %>
