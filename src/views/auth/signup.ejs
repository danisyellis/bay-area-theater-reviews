<%- include ../partials/layout.ejs %>

<div class="signup-page">
  <h1 class="center signup-h">Sign up to review Bay Area </h1>
  <h2 class="center signup-h">musicals, plays, operas, concerts, improv shows, comedy shows, immersive theater, and more!</h2>

  <form method="post" action="/signup" class="authy-form">
    <pre class="authy-form-errors"><%=message%></pre>
    <div class="section group">
      <div class="col span_1_of_2 auth-form-labels">Name:</div>
      <div class="col span_1_of_2">
        <input type="text" name="name" required/>
      </div>
    </div>
    <div class="section group">
      <div class="col span_1_of_2 auth-form-labels">Email address:</div>
      <div class="col span_1_of_2">
        <input type="email" name="email" required/>
      </div>
    </div>
    <div class="section group">
      <div class="col span_1_of_2 auth-form-labels">Password:</div>
      <div class="col span_1_of_2">
        <input type="password" name="password" required/>
      </div>
    </div>
    <div class="section group">
      <div class="col span_1_of_2 auth-form-labels"></div>
      <div class="col span_1_of_2"><input type="submit" value="Signup"></div>
    </div>
  </form>
</div>

<%- include ../partials/footer.ejs %>
